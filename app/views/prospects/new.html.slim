          ul
            li
              span#days
              | jours
            li
              span#hours
              | heures
            li
              span#minutes
              | Minutes
            li
              span#seconds
              | secondes
        #content.emoji
          span 🥳
          span 🎉
          span 🎂
    div
      span.newsletter.product-box
        = form_with model: @prospect do |form|
          ._form-content
            ._form-element._x18687261._full_width
              = form.text_field :name, placeholder: "Prénom"
              - if @prospect.errors[:name].present?
                p.error_msg= @prospect.errors[:name][0]
              = form.email_field :email, placeholder: "Adresse email"
              - if @prospect.errors[:email].present?
                p.error_msg= @prospect.errors[:email][0]
            ._button-wrapper._full_width
              = form.submit "JE PARTICIPE AU PRÉ-LANCEMENT *", id: "submit-btn", class: "button-block", style: "margin-bottom:16px; width: -webkit-fill-available;"
